<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovilizacionActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiempo de Movilización"
            android:layout_gravity="center_horizontal"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="@color/colorAccent2"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/clock"
            />


        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:textSize="60dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="20dp"
            android:background="@color/plomito"
            android:layout_gravity="center">

            <TableRow android:layout_marginTop="2dp"
                android:layout_gravity="center_vertical">

                <Button
                    android:layout_width="150dp"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/blanco"
                    android:layout_height="30dp"
                    android:onClick="startChronometer"
                    android:text="Iniciar" />



                <Button
                    android:layout_width="150dp"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/blanco"
                    android:layout_height="30dp"
                    android:onClick="pauseChronometer"
                    android:text="Pausar" />
                <Button
                    android:id="@+id/btn_llegue"
                    android:layout_width="150dp"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/blanco"
                    android:layout_height="30dp"
                    android:text="LleguË" />
                   <!-- android:onClick="LlegueChronometer"-->



            </TableRow> </TableLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tarifa:"
            android:layout_gravity="center_horizontal"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            />
        <TextView
            android:id="@+id/tvTarifamov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0,00$"
            android:layout_gravity="center_horizontal"
            android:textSize="90dp"
            android:textAlignment="center"
            android:textColor="@color/deeppurple"
            />






    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>